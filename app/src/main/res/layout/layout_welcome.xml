<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appBarLayout2"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:background="@drawable/shape_toolbar"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="#BC5B5B"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="Frame X"
            app:expandedTitleMarginStart="140dp"
            app:expandedTitleMarginEnd="64dp"
            >
            <!--<ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/comedy"
                android:scaleType="centerCrop"
                android:alpha="0.7"
                app:layout_collapseMode="parallax"
                />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Приятного просмотра 😊"
                    android:textSize="27sp" />
                <TextView
                    android:id="@+id/tv_size_db"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="В базе\n 45 000 сериалов\n  19 000 фильмов"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.07"
                    android:gravity="center" />
                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Проверить обновления"
                    android:background="@drawable/shape_toolbar"
                    android:layout_marginTop="10dp"
                    android:padding="5dp" />
            </LinearLayout>
            <Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>